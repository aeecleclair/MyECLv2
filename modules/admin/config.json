{
    "authorisation" : "#admin",
    "description" : "Module d'administration",
    "heads" : {
		"styles" : [
			"/modules/admin/static/admin.css"
		],
		"scripts" : [
			"/modules/admin/static/admin.js"		
		]
	},
    "rules" : [
        {
            "route" : "/modules/admin/static/*",
            "static" : "static/"
        },
        {
            "body" : "list_group",
            "callback" : "list"
        },
        {
            "body" : "show_group/:id",
            "callback" : "show",
            "heads" : {
                "scripts" : ["/modules/admin/static/show.js"]
            }
        },
        {

            "route" : "/modules/admin/create_group",
            "method" : "POST",
            "callback" : "create_group",
            "enctype" : "json"
        },
        {
            "route" : "/modules/admin/delete_group/:id",
            "method" : "POST",
            "callback" : "delete_group"
        },
        {
            "route" : "/modules/admin/add_members/:id",
            "method" : "POST",
            "callback" : "add_members",
            "enctype" : "json"
        },
        {
            "route" : "/modules/admin/remove_members/:id",
            "method" : "DELETE",
            "callback" : "remove_members"
        },
        {
            "route" : "/modules/admin/alter_group/:id",
            "method" : "POST",
            "callback" : "alter_group"
        }
    ],
    "menu" : [
        {
            "name" : "Administration",
            "sub" : [
                {
                    "name" : "Liste des groupes",
                    "body" : "list_group"
                }
            ]
        }
    ]
}

