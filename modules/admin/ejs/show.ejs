<div class="content">
    <div class="main-content">
        <div class="profile active" id="profile-tab">
            <div class="row">        
                <div class="col-md-offset-3 col-md-6">
                    <div id="informations_groupe">
                        <h3><i class="fa fa-square"></i> Informations du groupe</h3>
                        <p class="data-row">
                            <span class="data-name">Nom du groupe</span>
                            <span class="data-value"><input id="input_name" class="form-control" type="text" name="name" value="<%=name%>"></span>
                        </p>
                        <p class="data-row">
                            <span class="data-name">Description</span>
                            <span class="data-value"><textarea id="input_desc" class="form-control"><%=description%></textarea></span>
                        </p>
                        <a href="#" id ="save_fields" class="btn btn-custom-secondary"><i class="fa fa-file"></i> Mettre à jour les informations</a><br><br>
                        <a href="#" id="delete_group" class="btn btn-custom-primary"><i class="fa fa-minus-circle"></i> Supprimer le groupe</a>
                        
                    </div><br>
                    <div id="liste_membres">
                        <h3><i class="fa fa-square"></i> Membres du groupe (<%= members.length %>)</h3>
                        <ul class="list-unstyled activity-list">
                        <% for(let i in members){ %>
                            <li>
                                <%=members[i].name%> <%=members[i].firstname%> (<%=members[i].nick%>)
                                <a id="rm_<%=members[i].id%>" class="btn btn-link btn-sm remove_member"><i class="fa fa-user-times"></i></a>
                                <span class="timestamp"><%=members[i].position%></span>
                            </li>
                        <% } %>
                        </ul>
                    </div>
                    <div id="ajout_membre">
                        <h3><i class="fa fa-square"></i> Ajouter un membre</h3>
                        <div class="col-md-6"><input type="text" class="form-control" name="position" id="position" size="20" placeholder="En tant que ..."></div>
                        <div class="col-md-6"><input type="text" class="form-control" name="term" id="term" size="20" placeholder="Année ..."></div><br><br>
                        <div class="col-md-12"><input type="text" class="form-control" name="search" id="search" size="20" placeholder="Rechercher..."></div>
                        <div id="results"></div>
                    </div>
                    <br><br><br>
                    <input hidden id="hidden_id" value="<%=id%>">
                    <input id="hidden_token" type=hidden value="<%=token%>"/>

                    <a href="/home/admin/list_group" class="btn btn-default">Retour aux groupes</a>
                </div>
            </div>
        </div>    
    </div>
</div>