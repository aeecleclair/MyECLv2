                                            <option value="A1"/>
                                            <option value="A2"/>
                                            <option value="A3"/>
                                            <option value="A4"/>
                                            <option value="B0"/>
                                            <option value="B1"/>
                                            <option value="B2"/>
                                            <option value="B3"/>
                                            <option value="B4"/>
                                            <option value="C0"/>
                                            <option value="C1"/>
                                            <option value="C2"/>
                                            <option value="C3"/>
                                            <option value="C4"/>
                                        </datalist>
                                    </div>
                                </div>
                                <button type="button" class="btn btn-previous btn-default">Précédent</button>
                                <button type="submit" class="btn btn-primary">Inscription</button>
                            </div>
                        </fieldset>
                    
                    </form>

                </div>

            </div>

            <!-- modal pour l'ajout d'une image -->

            <div class="modal fade" id="modal-event" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            <h4 class="modal-title" id="myModalLabel">Ajouter une image</h4>
                        </div>
                        <div class="modal-body">
                            <input form="mainform" type="file" id="img-input" name="picture" accept="image/*">
                            <div id="main-cropper"></div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Annuler</button>
                            <button type="button" class="btn btn-primary" id="valid-resize">Valider</button>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>

    <!-- Javascript import -->

    <script src="/kingadmin/theme/assets/js/jquery/jquery-2.1.0.min.js"></script>
    <script src="/kingadmin/theme/assets/js/bootstrap/bootstrap.js"></script>
    <script src="/kingadmin/theme/assets/js/plugins/modernizr/modernizr.js"></script>
    <script src="/kingadmin/theme/assets/js/plugins/bootstrap-tour/bootstrap-tour.custom.js"></script>
    <script src="/kingadmin/theme/assets/js/plugins/jquery-slimscroll/jquery.slimscroll.min.js"></script>
    <script src="/kingadmin/theme/assets/js/king-common.js"></script>

    <script src="/image-picker-master/image-picker/image-picker.js"></script>
