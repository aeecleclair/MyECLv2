</head>

<body>

    <div class="container">

        <div class="row">

            <div id="connexion" class="col-lg-4 col-lg-offset-4 col-xs-8 col-xs-offset-2">

                <div id="connexion-header">

                    MyECL

                </div>

                <div id="connexion-body">

                    <form role="form" id="mainform" enctype="multipart/form-data" action="/create_account" method="POST" class="registration-form form-horizontal">
                        <fieldset>
                            <input type="hidden" id="__token" name="__token" value="<%- token %>" >
                            <div class="form-top">
                                <div class="form-top-left">
                                    <h3>Etape 1/3 :</h3>
                                    <p>Création du compte</p>
                                </div>
                                <div class="form-top-right">
                                    <i class="fa fa-key"></i>
                            </div>
                            </div>
                            <div class="form-bottom">
                                <!-- 
                                <div id="login-input" class="form-group">
                                    <div class="col-sm-12">
                                        <div class="input-group">
                                            <input type="text" id="login" name="login" placeholder="Login" class="form-control">
                                            <span class="input-group-addon"><i class="fa fa-user"></i></span>
                                        </div>
                                    </div>
                                </div>
                                -->
                                <input type="hidden" id="login" name="login" value="<%= login %>" >
                                <div id="name-input" class="form-group">
                                    <div class="col-sm-12">
                                        <div class="name-group">
                                            <input type="text" id="name" name="name" placeholder="Nom" class="form-control">
                                        </div>
                                    </div>
                                </div>
                                <div id="firstname-input" class="form-group">
                                    <div class="col-sm-12">
                                        <div class="firstname-group">
                                            <input type="text" id="firstname" name="firstname" placeholder="Prenom" class="form-control">
                                        </div>
                                    </div>
                                </div>
                                <div id="password-input" class="form-group">
                                    <div class="col-sm-12">
                                        <div class="input-group">
                                            <input type="password" id="password" name="password" placeholder="Mot de passe" class="form-control">
                                            <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                                        </div>
                                    </div>
                                </div>
                                <div id="conf-password-input" class="form-group">
                                    <div class="col-sm-12">
                                        <div class="input-group">
                                            <input type="password" id="conf-password" name="conf-password" placeholder="Confirmer mot de passe" class="form-control">
                                            <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                                        </div>
                                    </div>
                                    <div id="error-message" class="col-sm-12"></div>
                                </div>
                                <button type="button" class="btn btn-next btn-default">Suivant</button>
                            </div>
                        </fieldset>
                        
                        <fieldset>
                            <div class="form-top">
                                <div class="form-top-left">
                                    <h3>Etape 2/3 :</h3>
                                    <p>Image de profil</p>
                                </div>
                                <div class="form-top-right">
                                    <i class="fa fa-user"></i>
                                </div>
                            </div>
                            <div class="form-bottom">
                                <select name="picselector" class="image-picker show-html">
                                    <option data-img-src="http://placekitten.com/170/170" value="1">Cute Kitten 1</option>
                                    <option data-img-src="http://placekitten.com/170/170" value="2">Cute Kitten 2</option>
                                    <option data-img-src="http://placekitten.com/170/170" value="3" data-img-class="add_img">Cute Kitten 3</option>
                                </select>
                                <button type="button" class="btn btn-previous btn-default">Précédent</button>
                                <button type="button" class="btn btn-next btn-default">Suivant</button>
                            </div>
                            <div id="test"></div>
                        </fieldset>
                        
                        <fieldset>
                            <div class="form-top">
                                <div class="form-top-left">
                                    <h3>Etape 3/3 :</h3>
                                    <p>Informations centraliennes (optionnelles)</p>
                                </div>
                                <div class="form-top-right">
                                    <i class="fa fa-graduation-cap"></i>
                                </div>
                            </div>
                            <div class="form-bottom">
                                <div class="row" id="info-ecl">
                                    <div class="col-xs-6">
                                        <input type="text" id="surnom" name="nick" placeholder="Surnom" class="form-control">
                                    </div>
                                    <div class="col-xs-6">
                                        <input type="text" id="promo" name="promo" placeholder="Promo (ex : 2016E)" class="form-control">
                                    </div>
                                    <div class="col-xs-6">
                                        <input type="text" list="etages" id="etage" name="floor" placeholder="Etage" class="form-control">
