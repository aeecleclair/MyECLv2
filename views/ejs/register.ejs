//            // on envoi formData vers /create_account
//            $.ajax({
//                type        : 'POST', // define the type of HTTP verb we want to use (POST for our form)
//                url        : '/create_account', // the url where we want to POST
//                data        : formData, // our data object
//                dataType    : 'json', // what type of data do we expect back from the server
//                processData: false,
//                mimeType : 'multipart/form-data',
//                contentType: false
//            },function(){
//                window.location.replace('/home'); 
//            });
//            
//        });
        // image picker

        $("select").imagepicker({
            hide_select:  false
        });

        // ajout d'une image

        $(".add_img").click(function(){
            $("#modal-event").modal("show");
        });

        $("#img-input").change(function(){
            readFile(this);
        });

        $('#valid-resize').on('click', function (ev) {
            resize.croppie('result', {
                type: 'canvas',
                size: 'viewport'
            }).then(function (resp) {
                $("#modal-event").modal("toggle");
                this.picture = $("img.add_img");
                $("test").html = $("img.add_img");
                this.picture.attr('src', resp);
            });
        });

    });

    </script>

</body>

</html>
